type
  TForm3 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Label3: TLabel;
    Edit2: TEdit;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form3: TForm3;

implementation

uses Unit4, Unit5;

{$R *.dfm}

procedure TForm3.Button1Click(Sender: TObject);
begin

if Edit2.Text=='palo_y_a_la_bolsa' then
  begin
    Form5.Show;
  end
else
  begin
    Form4.Show;
  end;

end;

